//求和1~100
int main() {
    int i,sum=0;
    for(i=0;i<=100;i++)
    {
        sum+=i;
    }
    printf("总和为：%d",sum);
    return 0;
}


//求1的一次方+2的二次方+3的三次方+...+n的n次方
int main() {
    int i,j,n;
    long sum=0,term;
    printf("请输入n的值:");
    scanf_s("%d",&n);
    for(i=1;i<=n;i++)
    {
        term=1;
        for(j=1;j<=i;j++)
        {
            term*=i;
        }
        sum+=term;

    }
    printf("%ld",sum);
    return 0;
}


//在一千名学生募集捐款，达到10万元就停止，统计捐款的人数和平均每人捐款的金额
int main() {
    int i,sum=100000;
    double total=0,average,amount;
    for (i = 0; i <=1000; i++)
    {
        printf("请输入捐款的数目：");
        scanf_s("%lf",&amount);
        total=total+amount;
        if(total>=sum){
            break;
        }
    }
    average=total/i;
    printf("捐款的人数为：%d,平均为：%lf",i,average);
    return 0;
}


