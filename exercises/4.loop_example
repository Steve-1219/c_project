//输入一个大于3的整数，并判断它是不是质数
int main() {
    int i,n;
    double k;
    printf("请输入一个整数：");
    scanf_s("%d",&n);
    k=sqrt(n);
    for(i=2;i<=k;i++) {
        if (n % i == 0) {
            break;
        }
    }
    if(i<=k)
    {
        printf("数字%d不是一个质数",n);
    }else
    {
        printf("数字%d是一个质数",n);
    }
    return 0;
}


//求100~200之间的质数
int main() {
    int n, i;
    double k;

    for (n = 101; n <= 200; n = n + 2) {
        k = sqrt(n);

        for (i = 2; i <= k; i++) {
            if (n % i == 0) break;
        }

        if (i > k) {
            printf("%4d", n);
        }
    }
    return 0;
}


//求100以内能被3整数但是个位数为6的数字
int main() {
    int n, i;

    for(n = 0; n <= 9; n++) {
        i = n * 10 + 6;

        if(i % 3 == 0) {
            printf("%4d", i);
        }
    }

    printf("\n");
    return 0;
}


//有一个数列2/1，3/2，5/3，8/5，13/8...求出这个数列的前20项之和
int main() {
    int n,t,number=20;
    double a=2,b=1,sum=0;
    for(n=1;n<=number;n++)
    {
        sum=sum+a/b;
        t=(int)a;
        a=a+b;
        b=t;
    }
    printf("sum等于：%lf",sum);
    return 0;
}


//求1~300的所有奇数和，偶数和
int main() {
    int i,j,sum1=0,sum2=0;
    for (i=1;i<=300;i++)
    {
        if(i%2==0)
        {
            sum1+=i;
        }else
            sum2+=i;
    }
    printf("奇数和为：%d,偶数和为：%d",sum1,sum2);
    return 0;
}




