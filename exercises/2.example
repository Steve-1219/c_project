//计算一个三位整数的个位，十位，百位之和
int main()
{
    int a,ge,shi,bai,sum;
    printf("请输入一个三位数：");
    scanf_s("%d",&a);
    ge=a%10;
    shi=a/10%10;
    bai=a/100%10;
    sum=ge+shi+bai;
    printf("三位数的位数之和为：%d",sum);
    return 0;
}


//强制类型转换运算符的使用
int main()
{
    int m=3;
    printf("m/2=%d\n",m/2);
    printf("(float)(m/2)=%f\n",(float)(m/2));
    printf("(float)m/2=%f\n",(float)m/2);
    printf("m=%d",m);
    return 0;
}
