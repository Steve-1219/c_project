//求圆柱体积
int main()
{
    double r,h,v,pai=3.14;
    printf("请输入圆柱的高和半径：");
    scanf_s("%lf,%lf",&h,&r);
    v = pai * r * r * h;
    printf("圆柱的体积为：%.2lf",v);
    return 0;
}


