//3.指针法
int main() {
    int arr[10],i,*p;
    printf("请输入10个元素：");
    for(i=0;i<10;i++)
    {
        scanf_s("%d",&arr[i]);
    }
    for(p=arr;p<(arr+10);p++)
    {
        printf("%2d",*p);
    }

    return 0;
}


