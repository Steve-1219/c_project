//用指针处理
int main() {
    char a[]="I am Chinese",b[20],*p1,*p2;
    for(p1=a,p2=b;*p1!='\0';p1++,p2++)
    {
        *p2=*p1;
    }
    *p2='\0';
    printf("%s",b);
    return 0;
}


//输出二维数组的前一个数，输出后一组数
float *search(float(*p)[4],int n);

int main() {
    float score[3][4]={{60,70,80,90},{56,89,67,33},{34,56,78,54}};
    float *p;
    int i,k;
    printf("输入第一个数：");
    scanf_s("%d",&k);
    printf("第二组数为：");
    p=search(score,k);
    for(i=0;i<4;i++)
    {
        printf("%5.0f",*(p+i));
    }
    return 0;
}

float *search(float(*p)[4],int n)
{
    float *pt;
    pt=*(p+n);
    return(pt);
}


