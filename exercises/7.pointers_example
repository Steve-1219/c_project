//将a和b进行从大到小的顺序输出，用函数和指针
int swap(int *p1,int *p2);

int main() {
    int t,a,b;
    int *p1,*p2;
    printf("请输入两个整数：");
    scanf_s("%d,%d",&a,&b);
    p1=&a;
    p2=&b;
    if(a<b)
    {
        swap(p1,p2);
    }
    printf("%d,%d",a,b);
    return 0;
}

int swap(int *p1,int *p2)
{
    int temp;
    temp=*p1;
    *p1=*p2;
    *p2=temp;
}


